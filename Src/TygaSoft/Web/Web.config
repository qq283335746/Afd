<?xml version="1.0" encoding="utf-8"?>

<!--
  有关如何配置 ASP.NET 应用程序的详细信息，请访问
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->

<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="rewriter" requirePermission="false" type="Intelligencia.UrlRewriter.Configuration.RewriterConfigurationSectionHandler, Intelligencia.UrlRewriter"/>
  </configSections>
  <connectionStrings>
    <add name="AspnetDbConnString" connectionString="Data Source=localhost;Integrated Security=SSPI;Initial Catalog=TygaSoftAspnetDb" providerName="System.Data.SqlClient"/>
    <add name="AfdDbConnString" connectionString="Data Source=localhost;Integrated Security=SSPI;Initial Catalog=AfdDb" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <appSettings>
    <add key="WebDAL" value="TygaSoft.SqlServerDAL"/>
    <add key="AESEncryptKey" value="011de50b-216d-49c4-8836-8ba2f4c9e490"/>
    <add key="FilesRoot" value="~/Files"/>
    <!-- 运行模式 -->
    <add key="RunMode" value="saas"/>
    <!-- 上传文件大小限制 -->
    <add key="UploadFileSize" value="5120000"/>
    <!-- 生成缩略图 -->
    <add key="PC" value="800*800,350*350,50*50"/>
    <add key="Android" value="350*350,150*150,60*60"/>
    <add key="IOS" value="350*350,150*150,60*60"/>

    <!-- Enable data caching -->
    <add key="EnableCaching" value="false"/>
    <add key="CacheDependencyAssembly" value="TygaSoft.TableCacheDependency,TygaSoft.TableCacheDependency"/>
    <add key="CacheDatabaseName" value="CceccDb"/>
    <add key="MenusCacheDuration" value="12"/>
    <add key="MenusTableDependency" value="Menus"/>

    <!-- Msmq -->
    <add key="MsmqMessaging" value="TygaSoft.MsmqMessaging"/>
    <add key="AfdRunQueue" value=".\private$\AfdRunQueue"/>

  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <authentication mode="Forms">
      <forms defaultUrl="~/" loginUrl="~/login.html" name=".TygaSoft2AfdFm" path="/" timeout="480" protection="All" slidingExpiration="false" requireSSL="false" cookieless="UseCookies"/>
    </authentication>

    <membership defaultProvider="MsSqlMembershipProvider" hashAlgorithmType="SHA1">
      <providers>
        <clear/>
        <!--<add name="MsSqlMembershipProvider" type="TygaSoft.CustomProvider.MsSqlMembershipProvider" applicationName="TygaSoft" connectionStringName="QdhtDbConnString" requiresUniqueEmail="true" enablePasswordRetrieval="false" enablePasswordReset="true" requiresQuestionAndAnswer="false" passwordFormat="Hashed" minRequiredPasswordLength="6" minRequiredNonalphanumericCharacters="0" maxInvalidPasswordAttempts="15" passwordAttemptWindow="10" passwordStrengthRegularExpression="^[a-zA-Z0-9_\@\-\!\#\$\%\^\*\.\~]{6,30}$"/>-->
        <add name="MsSqlMembershipProvider" type="System.Web.Security.SqlMembershipProvider" applicationName="TygaSoft2Afd" connectionStringName="AspnetDbConnString" requiresUniqueEmail="false" enablePasswordRetrieval="false" enablePasswordReset="true" requiresQuestionAndAnswer="false" passwordFormat="Hashed" minRequiredPasswordLength="6" minRequiredNonalphanumericCharacters="0" maxInvalidPasswordAttempts="15" passwordAttemptWindow="10" passwordStrengthRegularExpression="^[a-zA-Z0-9_\@\-\!\#\$\%\^\*\.\~]{6,30}$"/>
      </providers>
    </membership>
    <roleManager defaultProvider="MsSqlRoleProvider" enabled="true" cookieName=".TygaSoft2AfdRc" cookiePath="/" cookieProtection="All" cookieRequireSSL="false" cookieSlidingExpiration="false" cookieTimeout="480" createPersistentCookie="false" cacheRolesInCookie="true" maxCachedResults="25">
      <providers>
        <clear />
        <!--<add name="MsSqlRoleProvider" type="TygaSoft.CustomProvider.MsSqlRoleProvider,TygaSoft.CustomProvider" applicationName="TygaSoft" connectionStringName="QdhtDbConnString" />-->
        <add name="MsSqlRoleProvider" type="System.Web.Security.SqlRoleProvider" applicationName="TygaSoft2Afd" connectionStringName="AspnetDbConnString"/>
      </providers>
    </roleManager>
    <anonymousIdentification enabled="true"/>
    <profile automaticSaveEnabled="false" enabled="true" defaultProvider="SqlProfileProvider" inherits="TygaSoft.CustomProvider.CustomProfileCommon">
      <providers>
        <clear/>
        <add name="SqlProfileProvider" type="System.Web.Profile.SqlProfileProvider" applicationName="TygaSoft2Afd" connectionStringName="AspnetDbConnString" description=""/>
      </providers>
    </profile>
    <caching>
      <sqlCacheDependency enabled="false" pollTime="10000">
        <databases>
          <add name="AspnetDb" connectionStringName="AspnetDbConnString" pollTime="10000"/>
          <add name="AfdDb" connectionStringName="AfdDbConnString" pollTime="10000"/>
        </databases>
      </sqlCacheDependency>
    </caching>
    <siteMap defaultProvider="CustomSiteMapProvider" enabled="true">
      <providers>
        <add name="CustomSiteMapProvider" type="TygaSoft.CustomProvider.CustomSiteMapProvider,TygaSoft.CustomProvider" />
      </providers>
    </siteMap>
  </system.web>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true">
      <add name="UrlRewriter" type="Intelligencia.UrlRewriter.RewriterHttpModule,Intelligencia.UrlRewriter"/>
    </modules>
  </system.webServer>
  <rewriter file="~/App_Data/UrlRewriter.xml"/>

  <system.serviceModel>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true"/>
    <services>
      <service name="TygaSoft.WcfService.PdaService">
        <endpoint address="" binding="basicHttpBinding" bindingConfiguration="binding_UploadService" contract="TygaSoft.WcfService.IPda"/>
      </service>
      <service name="TygaSoft.WcfService.AfdService">
        <endpoint address="" binding="webHttpBinding" behaviorConfiguration="AjaxBehavior" contract="TygaSoft.WcfService.IAfd"/>
      </service>
      <service name="TygaSoft.WcfService.SecurityService">
        <endpoint address="" binding="webHttpBinding" behaviorConfiguration="AjaxBehavior" contract="TygaSoft.WcfService.ISecurity"/>
      </service>
    </services>
    <bindings>
      <basicHttpBinding>
        <binding>
          <security mode="None"></security>
        </binding>
        <binding name="binding_UploadService" maxReceivedMessageSize="5120000">
          <readerQuotas maxStringContentLength="5120000"/>
        </binding>
      </basicHttpBinding>
      <webHttpBinding>
        <binding>
          <security mode="None"></security>
        </binding>
      </webHttpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="True"/>
          <serviceDebug includeExceptionDetailInFaults="False"/>
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="AjaxBehavior">
          <webHttp/>
          <!--<enableWebScript />-->
        </behavior>
      </endpointBehaviors>
    </behaviors>

  </system.serviceModel>
</configuration>
